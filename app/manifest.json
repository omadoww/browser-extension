{
    "name": "__MSG_appName__",
    "version": "1.0.9",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "homepage_url": "https://github.com/stefanbuck/github-linker",
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*/*"
            ],
            "js": [
                "scripts/jquery.js",
                "scripts/contentscript.js"
            ],
            "run_at": "document_end",
            "all_frames": false
        }
    ],
    "permissions": [
        "tabs",
        "https://github.com/*",
        "webNavigation"
    ],
    "web_accessible_resources": [
        "data/npm.json",
        "data/bower.json"
    ]
}