{
  "name": "GitHub Linker - DEV",
  "version": "4.0.0",
  "manifest_version": 2,
  "author": "Stefan Buck",
  "description": "",
  "homepage_url": "https://github.com/github-linker/chrome-extension",
  "icons": {
    "16": "icons/icon-16.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://gist.github.com/*"
      ],
      "js": ["app.js"],
      "css": ["style.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}
